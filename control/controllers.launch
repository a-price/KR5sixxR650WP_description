<launch>

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find KR5sixxR650WP_description)/control/controllers.yaml" command="load"/>

  <!-- load the controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
    output="screen" ns="/kuka" args="joint_state_controller shoulder_yaw_position_controller shoulder_pitch_position_controller elbow_pitch_position_controller elbow_roll_position_controller wrist_pitch_position_controller wrist_roll_position_controller"/>

  <!-- convert joint states to TF transforms for rviz, etc -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
    respawn="false" output="screen">
    <remap from="/joint_states" to="/kuka/joint_states" />
  </node>

</launch>
